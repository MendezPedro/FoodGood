<%= form_with(model: @comment, remote: true) do |f| %>
    <% if @comment.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este comentario no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @comment.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.text_field :content, class: 'form-group' %>
    </div>

    <div class="form-group">
        <%= f.hidden_field :post_id, value: @post.id, class: 'form-group' %>
    </div>

    <div id="create-button" class = 'actions'>
        <%= f.submit "Comenta", class: 'btn btn-success' %>
    </div>
<% end %>
<br>