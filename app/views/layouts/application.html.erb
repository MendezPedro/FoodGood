<!DOCTYPE html>
<html>
  <head>
    <title>FoodGood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render 'layouts/navbar' %>
    </div>
    <div class="container ">
      <% if notice %>
        <p class="notice bg-success text-white"><%= notice %></p>
      <% end %>
      <% if alert %>
      <p class="alert bg-warning text-white"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
